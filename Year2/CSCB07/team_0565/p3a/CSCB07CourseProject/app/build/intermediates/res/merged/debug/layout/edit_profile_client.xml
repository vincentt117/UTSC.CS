<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="E-mail"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:text="Client Email"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="First Name"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_firstname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="First Name"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_lastname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Last Name"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Password"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Password"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Address"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Adress"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_ccnum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Credit Card Number"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_ccnum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Credit Card Number"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_ccdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Expiry Date"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_ccdate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Expiry Date"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/b_udpate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="update"
            android:ems="10"
            android:onClick="">
        </Button>

        <Button
            android:id="@+id/b_gobackhp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Go Back to Homepage"
            android:ems="10"
            android:onClick="backToHomepage">
        </Button>


    </LinearLayout>

</LinearLayout>