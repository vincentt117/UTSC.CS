<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="Edit Flights's Info"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:ems="10"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_flight_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="flight no."
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_flight_no"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:text="flight no."
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_departure_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Departure Time"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_departure_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Departure Time"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/vt_arrival_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Arrival Time"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_arrival_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Arrival Time"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_airline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Airline"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_Airline"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Airline"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_origin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Origin"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_origin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Origin"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_destination"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Destination"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_destination"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Destination"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Price"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_price"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Price"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_numSeats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Number of Seats"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_numSeats"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Number of Seats"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/b_udpate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="update"
            android:ems="10"
            android:onClick="onClickUpdateFlights">
        </Button>

        <Button
            android:id="@+id/b_gobackhp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Go Back to Homepage"
            android:ems="10"
            android:onClick="onClick_EditFlight_to_Homepage">
        </Button>


    </LinearLayout>



</LinearLayout>