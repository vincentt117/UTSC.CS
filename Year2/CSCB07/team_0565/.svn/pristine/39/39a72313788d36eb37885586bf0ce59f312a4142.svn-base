<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="wrap_content">

        <TextView
            android:text="@string/wt_admin_homepage"
            android:textSize="@dimen/header_text_size_large"
            android:gravity="center"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/client_e_mail"
            android:layout_height="wrap_content"/>

        <EditText
            android:id = "@+id/et_clients_email"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="textEmailAddress"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true">


            <Button
                android:id="@+id/b_edit_view_client"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_edit_client_info_link"
                android:onClick="onClickEditClientInfo">
            </Button>

            <Button
                android:id="@+id/b_clients_itineraries"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_view_client_booked_itineraries_link"
                android:onClick="onClickViewClientsItineraries">
            </Button>

            <Button
                android:id="@+id/b_search_book_clients_itineraries"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/bt_edit_client_itineraries__link"
                android:onClick="onClickAdminSearchFlights">
            </Button>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/flight_number"
            android:layout_height="wrap_content"/>

        <EditText
            android:id = "@+id/et_flight_number"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:layout_height="wrap_content" />

        <Button
                android:id="@+id/b_edit_flights"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/bt_edit_flight_link"
                android:onClick="onClickEditFlights">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/s_client_load_file"
            android:layout_height="wrap_content"/>

        <EditText
            android:id = "@+id/et_client_file"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_load_client_file"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_client_load_file"
            android:onClick="onClickLoadClientFile"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/s_flight_load_file"
            android:layout_height="wrap_content"/>

        <EditText
            android:id = "@+id/et_flight_file"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:inputType="text"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/b_load_flight_file"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/bt_flight_load_file"
            android:onClick="onClickLoadFlightFile"/>


        <Button
            android:id="@+id/b_logout"
            android:text="@string/bt_log_out"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickLoadAdminLogOut"/>

</LinearLayout>

</ScrollView>