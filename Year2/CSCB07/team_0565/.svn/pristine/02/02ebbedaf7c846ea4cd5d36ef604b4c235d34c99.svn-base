<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="72dp"
        android:gravity="center"
        android:text="View/Edit Client's Info"
        android:textSize="@dimen/header_text_size"
        android:textStyle="bold"
        android:ems="10"/>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">


        <TextView
            android:id="@+id/tv_admin_edit_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/e_mail"
            android:textSize="@dimen/form_text_size"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textEmailAddress"
            android:text="Client Email"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_firstName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/first_name"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_firstName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="@string/first_name"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_LastName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Last Name"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_lastName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Last Name"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Password"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Password"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Address"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Adress"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_ccNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Credit Card Number"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_ccNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="text"
            android:text="Credit Card Number"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_admin_edit_ccDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Expiry Date"
            android:textSize="40px"
            android:ems="10">
        </TextView>

        <EditText
            android:id="@+id/et_admin_edit_ccDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Expiry Date"
            android:textSize="40px"
            android:ems="10">
        </EditText>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/b_admin_udpate_clientInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="update"
            android:ems="10"
            android:onClick="">
        </Button>

        <Button
            android:id="@+id/b_admin_gobackhp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Go Back to Homepage"
            android:ems="10"
            android:onClick="">
        </Button>


    </LinearLayout>

</LinearLayout>